<!-- Modal -->
<div class="modal fade modal_dashboard" id="mySupport" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Support <<span>/O</span>></h4>
      </div>
      <div class="modal-body">
        <%= form_for(Support.new) do |f| %>
          <div class="form-group">
            <% if user_signed_in? %>
              <!-- -->
            <% else %>
              <%= f.text_field :email, class: "form-control", placeholder: "Email Address" %><br>
            <% end %>
            <%= f.text_area :description, class: "form-control", placeholder: "Write Your Question Here!" %>
          </div>
          <div class="alert alert-warning alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>If submit button doesn't load please refesh the page or visit <a href="#">Support</a>.</strong>
          </div>
      </div>
      <div class="modal-footer">
        <div class="row">
          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <%= f.submit "Submit", class: "btn btn-block btn-greenish" %>
          </div>
          <% end %>
          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <button type="button" class="btn btn-block btn-redish" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>