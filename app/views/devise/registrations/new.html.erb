<div class="form-horizontal form_devise_login">
  <%= render 'layouts/login_header' %>
  <div class="container">
    <div class="row jumbotron">
      <div class="col-lg-3 col-md-3 hidden-sm hidden-xs"></div>
      <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
        <div class="form-group" id="login_form">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <h3 id="center"><b>Sign up today</b></h3><br>

          <%= f.email_field :email, class: "form-control", 
                placeholder: "Email Address", type: "text" %>
              </br>
          <%= f.text_field :name, class: "form-control", 
                placeholder: "Full Name", type: "text" %>
              </br>
          <%= f.text_field :company_name, class: "form-control", 
                placeholder: "Company Name", type: "text" %>
              </br>
          <%= f.text_field :title, class: "form-control", 
                placeholder: "Company Role", type: "text" %>
              </br>
          <%= f.password_field :password, :autocomplete => "off", type: "password",
                                               class: "form-control", placeholder: "Password" %>
              </br>
          <%= f.password_field :password, :autocomplete => "off", type: "password",
                                               class: "form-control", placeholder: "Password" %>
          <label class="checkbox">
              <span class="pull-left">
                  <h5>By signing up you have agree our 
                      <a href="#" data-toggle="modal" data-target="#myModal">Term &amp; Condition</a>
                  </h5>
              </span>
          </label>
          
          <br>
          <button class="btn btn-greenish btn-block" 
                  type="f.submit"><i class="glyphicon glyphicon-record"></i><b> SIGN UP </B></button>
          <hr>
          <div id="center">
              Already have an account?<br/>
              <a class="" href="<%= login_path %>">
                  Login
              </a>
          </div>
        <% end %>
      </div>
      <div class="col-lg-3 col-md-3 hidden-sm hidden-xs"></div>
    </div>
  </div>
</div>

